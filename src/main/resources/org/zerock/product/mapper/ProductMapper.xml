<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="org.zerock.product.mapper.ProductMapper">
  
  <insert id="insert">
        insert into tbl_product (product_seq, product_name, product_price, product_quantity, product_seller, product_filename, product_info) 
        values (product_seq.nextval, #{product_name}, #{product_price}, #{product_quantity}, #{product_seller}, #{product_filename}, #{product_info})
  </insert>
  
  <!-- 여기까지 구현완료 -->
  
  
	 <sql id="criteria">
     <where>
      <foreach item="type" collection="typeArr" separator="OR">
         <choose>
            <when test="type == 'T'.toString()">
               title LIKE '%' || #{keyword} || '%'
            </when>
            <when test="type == 'C'.toString()">
               content LIKE '%' || #{keyword} || '%'
            </when>
            <when test="type == 'W'.toString()">
               writer LIKE '%' || #{keyword} || '%'
            </when>
         </choose>
      </foreach>
   </where> 
  </sql>
  
